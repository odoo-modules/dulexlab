<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_overtime_form_view" model="ir.ui.view">
            <field name="name">employee.overtime.form.view</field>
            <field name="model">employee.overtime</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">

                        </div>
                        <field name="image_medium" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h2>
                                <field name="employee_id" required="1"/>
                            </h2>
                        </div>
                        <notebook>
                            <page string="Information">
                                <h1>
                                    <field name="name" placeholder="Description .. " required="True"/>
                                </h1>
                                <group col="4">
                                    <field name="expect_sign_out"/>
                                    <field name="act_sign_out"/>
                                    <field name="diff" readonly="1"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>


        <record id="hr_overtime_tree_view" model="ir.ui.view">
            <field name="name">employee.overtime.tree</field>
            <field name="model">employee.overtime</field>
            <field name="arch" type="xml">
                <tree string="Overtime" decoration-danger="state=='cancel'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_overtime_view_action" model="ir.actions.act_window">
            <field name="name">Employee Overtime</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.overtime</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

        <menuitem id="overtime_employee_parent_menu" name="Employee Overtime" parent="hr.menu_hr_root"
                  action="hr_employee_overtime_view_action"/>
    </data>
</odoo>