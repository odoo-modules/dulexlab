        <template id="display_leave_request" name="Display Leave Request">
             <!--<t t-call="website.layout">-->
             <t t-call="portal.portal_layout">
                    <style>
                    #myInput {
                      background-position: 10px 10px;
                      background-repeat: no-repeat;
                      width: 100%;
                      font-size: 16px;
                      padding: 12px 20px 12px 40px;
                      border: 1px solid #ddd;
                      margin-bottom: 12px;
                    }
                    </style>
                    <h3 class="page-header">
                        Your Leave Requests
                    </h3>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <a t-attf-href="/web#view_type=form&amp;model=hr.leave&amp;&amp;action=hr_holidays.hr_leave_action_new_request" class="btn btn-info">New Leave Request</a>
                            </div>
                            <div class="dropdown pull-right mr8 col-sm-6">
                                <ul class="dropdown-menu" aria-labelledby="sortby">
                                    <li t-foreach="sortings" t-as="option" t-attf-class="#{sortby == option and 'active'}">
                                        <a t-att-href="default_url + '?' + keep_query('date_begin', 'date_end', sortby=option)"><span t-esc="sortings.get(option).get('label')"/></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <table class="table table-hover o_my_status_table">
                    <thead>
                      <tr class="active">
                        <th>Leave Type</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End date</th>
                        <th>Number of Days</th>
                        <th>Status</th>
                        <th></th>
                        <th></th>
                      </tr>
                    </thead>
                    <t t-foreach="holidays" t-as="holiday">
                        <tr>
                            <td class="text-left">
                                <span t-field="holiday.holiday_status_id"/>
                            </td>
                            <td>
                                <span t-field="holiday.name"/>
                            </td>
                            <td class="text-left">
                                <span t-field="holiday.date_from"/>
                            </td>
                            <td>
                                <span t-field="holiday.date_to"/>
                            </td>
                            <td>
                                <span t-field="holiday.number_of_days"/>
                            </td>
                            <td>
                                <span t-field="holiday.state"/>
                            </td>
                            <td>
                                <a class="btn btn-info" 
                                   t-att-href="'/web#return_label=Website&amp;model=hr.leave&amp;id=%s&amp;view_type=form' % (holiday.id)" groups="odoo_leave_request_portal_employee.group_employee_leave, odoo_leave_request_portal_employee.group_employee_leave_manager">Edit</a>
                            </td>
                            <td>
                                <t t-if="request.env['res.users'].browse(request.session.uid).user_has_groups('odoo_leave_request_portal_employee.group_employee_leave_manager')&amp;(holiday.state == 'confirm')">
                                    <a class="btn btn-info"
                                       t-att-href="'/leave_approve?id=%s' % (holiday.id)" groups="odoo_leave_request_portal_employee.group_employee_leave, odoo_leave_request_portal_employee.group_employee_leave_manager">Approve</a>
                                </t>
                            </td>

                        </tr>
                    </t>
                </table>
	        </t>
	    </template>
        
	    <template id="not_allowed_leave_request" name="Access Denied">
            <!--<t t-call="website.layout">-->
            <t t-call="portal.portal_layout">
                <div id="wrap">
                    <div class="oe_structure"/>
                    <div class="container">
                        <h1>You are not Allowed Access This Document</h1>
                        <div>
                            <a t-attf-href="/my/home" class="btn btn-lg btn-primary">
                                    Back
                                </a>
                        </div>
                    </div>
                    
                </div>
            </t>
       </template>
        
