<odoo>

    <report id="custom_inv_report"
            model="account.invoice"
            string="Custom Invoice"
            report_type="qweb-pdf"
            name="bi_invoice_sequence.custom_inv_report_template"
            file="bi_invoice_sequence.custom_inv_report_template"
            attachment_use="True"
    />


    <template id="custom_inv_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <div class="row text-center"
                             style="width:100%;height:50px;background-color:#492b68;border-radius:5px;">
                            <div class="col-6">
                            </div>
                            <div class="col-5" style="position:absolute;padding:10px;height:60px;background-color:#fff;overflow:hidden;z-index:100000001">
                                <div style="padding:10px">
                                    <strong>
                                        <h4 class="text-center" style="color:#492b68; vertical-align: middle;">
                                            <span t-field="o.invoice_sequence"/>
                                            <t t-if="o.tax_line_ids">فاتورة مبيعات</t>
                                            <t t-if="not o.tax_line_ids">اذن تسليم</t>
                                        </h4>
                                    </strong>
                                </div>
                            </div>
                            <div class="col-1">
                            </div>
                        </div>
                        <br/>
                        <div style="border:1px solid #492b68;border-radius:10px;overflow:hidden">
                            <table style="width: 100%;" class="table-striped">
                                <tbody>
                                    <tr>
                                        <td style="text-align: center;">
                                            <strong>العنوان</strong>
                                        </td>
                                        <td style="text-align: center;">
                                            <strong>اسم العميل</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: center; width: 70%;">
                                            <t t-if="o.partner_id.street">
                                                <span t-field="o.partner_id.street"/>
                                            </t>
                                            <t t-if="not o.partner_id.street or o.partner_id.street == ''">
                                                &amp;nbsp;
                                            </t>
                                        </td>
                                        <td style="text-align: center; width: 30%;">
                                            <span t-field="o.partner_id.name"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <br/>
                        <div style="border:1px solid #492b68;border-radius:10px;overflow:hidden">
                            <table style="width: 100%;" class="table-striped">
                                <tbody>
                                    <tr>
                                        <td style="text-align: center;">
                                            <strong>تاريخ الفاتورة</strong>
                                        </td>
                                        <td style="text-align: center;">
                                            <strong>تاريخ الإستحقاق</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: center;">
                                            <span t-field="o.date_invoice"/>
                                        </td>
                                        <td style="text-align: center;">
                                            <span t-field="o.date_due"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <br/>
                        <br/>
                        <div>
                            <table class="table-bordered table-ms" style="width: 100%;">
                                <thead>
                                    <tr style="border-bottom:2px solid black;padding-top:3px;padding-bottom:3px;border-top:1px solid #c3c3c3">
                                        <th class="text-center" style="padding:2px;">القيمة</th>
                                        <th class="text-center" style="padding:2px;">الكمية</th>
                                        <th class="text-center" dir="rtl" style="padding:5px;">خ.ن%</th>
                                        <th class="text-center" dir="rtl" style="padding:5px;">خ.ت%</th>
                                        <th class="text-center" dir="rtl" style="padding:5px;">خ.ص%</th>
                                        <th class="text-center" style="padding:2px;">سعر الجمهور</th>
                                        <th class="text-center" style="padding:2px;">السعر الاساسي</th>
                                        <th class="text-center" style="padding:2px; width:30%!important;">اسم الصنف</th>
<!--                                        <th class="text-right" style="padding:2px; width:15%!important;">كود</th>-->
                                        <th class="text-right" style="padding:2px; text-align: center;">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="s" t-value="1"/>
                                    <t t-foreach="o.invoice_line_ids" t-as="l">
                                        <t t-if="len(o.invoice_line_ids) == s">
                                              <t t-set="style" t-value="'padding-top:3px;padding-bottom:3px;border-bottom:1px solid black;'" />
                                        </t>
                                        <t t-if="len(o.invoice_line_ids) != s">
                                              <t t-set="style" t-value="'padding-top:3px;padding-bottom:3px;border-bottom:1px solid #c3c3c3;'" />
                                        </t>
                                        <tr t-att-style="style">
                                            <td class="text-center" style="padding: 5px; border-left: 1px solid black;">
                                                <span t-field="l.price_subtotal"/>
                                            </td>
                                            <td class="text-center" style="padding: 5px;">
                                                <span t-field="l.quantity"/>
                                            </td>
                                            <td class="text-center" style="padding: 5px;">
                                                <span t-field="l.cd_disc"/>%
                                            </td>
                                            <td class="text-center" style="padding: 5px;">
                                                <span t-field="l.dd_disc"/>%
                                            </td>
                                            <td class="text-center" style="padding: 5px;">
                                                <span t-field="l.phd_disc"/>%
                                            </td>
                                            <td class="text-center" style="padding: 5px;">
                                                <span t-field="l.public_price_lst"/>
                                            </td>
                                            <td class="text-center" style="padding: 5px;">
                                                <span t-esc="'{0:,.2f}'.format(l.price_unit)"/>
                                            </td>
                                            <td class="text-center" style="padding: 5px; width:30%!important;">
                                                <span t-esc="l.product_id.name"/>
                                            </td>
<!--                                            <td style="padding: 5px;">-->
<!--                                                <span class="text-right" t-field="l.product_id.barcode"/>-->
<!--                                            </td>-->
                                            <td class="text-center" style="padding: 5px;">
                                                <span t-esc="s"/>
                                                <t t-set="s" t-value="s+1"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <br/><br/>
                        <div style="width:35%;page-break-inside: avoid;margin-top:5px;">
                            <div class="row"
                                 style="border-radius:5px!important;border:2px solid #492b68 !important;">
                                <div class="col-6" style="color:#492b68;">
                                    <span t-field="o.amount_untaxed"/>
                                </div>
                                <div class="col-6 text-right" style="color:#fff;background-color:#492b68">
                                    <strong>القيمة</strong>
                                </div>
                            </div>

                            <div class="row"
                                 style="margin-top:10px!important;border-radius:5px!important;border:2px solid #492b68 !important;">
                                <div class="col-6" style="color:#492b68;">
                                    <span t-field="o.amount_tax"/>

                                </div>
                                <div class="col-6 text-right" style="color:#fff;background-color:#492b68">
                                    <strong>الضريبة</strong>

                                </div>
                            </div>

                            <div class="row"
                                 style="margin-top:10px!important;border-radius:5px!important;border:2px solid #492b68 !important;">
                                <div class="col-6" style="color:#492b68;">
                                    <span t-field="o.discount_amount"/>
                                </div>
                                <div class="col-6 text-right" style="color:#fff;background-color:#492b68">
                                    <strong>الخصم</strong>

                                </div>
                            </div>

                            <div class="row"
                                 style="margin-top:10px!important;border-radius:5px!important;border:2px solid #492b68 !important;">
                                <div class="col-6" style="color:#492b68;">
                                    <span t-field="o.ks_amount_discount"/>

                                </div>
                                <div class="col-6 text-right" style="color:#fff;background-color:#492b68">
                                    <strong>الخصم النقدي</strong>

                                </div>
                            </div>
                            <div class="row"
                                 style="margin-top:10px!important;border-radius:5px!important;border:2px solid #492b68 !important;">
                                <div class="col-8" style="font-size:25px;color:#fff;background-color:#53a944">
                                    <span t-field="o.amount_total"/>

                                </div>
                                <div class="col-4 text-right"
                                     style="font-size:25px;color:#fff;background-color:#53a944">
                                    <strong>الصافي</strong>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="text-right" dir="rtl"
                             style="margin-top:3px;padding:3px;border-top:1px solid #492b68;border-bottom:1px solid #492b68">
                            <span t-esc="o.get_amount_total_words()"/>
                        </div>
                        <br/>
                        <div style="position:absolute;top:850px; page-break-inside: avoid;">
                            <table style="width: 100%;">
                                <tbody>
                                    <tr>
                                        <td style="text-align: right;">................................</td>
                                        <td style="text-align: center;">يعتمد</td>
                                        <td style="text-align: right;">................................</td>
                                        <td style="text-align: center;">الحسابات</td>
                                        <td style="text-align: right;">................................</td>
                                        <td style="text-align: center;">توقيع العميل بالاستلام</td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <div class="text-center"
                                 style="margin-top:3px;padding:3px;border-top:1px solid #492b68;border-bottom:1px solid #492b68">
                                استلمت البضاعة المبينة عالية و نتعهد بسداد قيمتها عند الطلب دون ادنى اعتراضمنا حيث اصبحت
                                القيمة دينا علينا والدفع و التقاضي بالقاهرة ولا يعتد السداد الا بايصال باسم الشركة لا
                                تعتبر
                                الفاتورة مسددة الا بايصال رسمي مختوم منن الشركة ويسلم المبلغ الى محصل الشركة الذي يحمل
                                الايصالات المختومة فقط وعلى العميل الاحتفاظ بالايصال لمطابقة كشف الحساب
                                <br/>
                                <h5>
                                    تتم استخراج الشيكات باسم شركة ديولكس لاب للادوية

                                </h5>
                            </div>
                        </div>
                    </t>
                </div>

            </t>
        </t>
    </template>

</odoo>